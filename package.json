{
  "name": "dnd-vtt",
  "version": "1.7.0",
  "description": "D&D Virtual Tabletop - Desktop app for online Dungeons & Dragons",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win",
    "prerelease": "node -e \"const fs=require('fs'),p=require('path'),d=p.join(__dirname,'dist');if(fs.existsSync(d)){fs.readdirSync(d).filter(f=>/\\.(exe|blockmap|yml)$/.test(f)).forEach(f=>fs.unlinkSync(p.join(d,f)))}\"",
    "release": "npm run build && electron-builder --win --publish always",
    "prebuild:index": "node scripts/build-chunk-index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/"
  },
  "keywords": [
    "dnd",
    "virtual-tabletop",
    "electron"
  ],
  "author": {
    "name": "D&D Virtual Tabletop"
  },
  "license": "ISC",
  "build": {
    "appId": "com.dnd-vtt.app",
    "productName": "D&D Virtual Tabletop",
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "resources/chunk-index.json",
        "to": "chunk-index.json"
      }
    ],
    "files": [
      "!**/.vscode/*",
      "!src/*",
      "!5.5e References/**/*",
      "!.claude/**/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
      "!{tsconfig.json,tsconfig.node.json,tsconfig.web.json}",
      "!**/*.ps1",
      "!CLAUDE.md"
    ],
    "publish": {
      "provider": "github",
      "owner": "EvilPatrick06",
      "repo": "DnD",
      "releaseType": "release"
    },
    "fileAssociations": [
      {
        "ext": "dndvtt",
        "name": "D&D VTT Export",
        "description": "D&D Virtual Tabletop character/campaign export",
        "role": "Editor"
      }
    ],
    "win": {
      "executableName": "dnd-vtt",
      "icon": "resources/icon.ico",
      "legalTrademarks": "D&D Virtual Tabletop",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": true,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "include": "resources/installer.nsh"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.2.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.183.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electron-vite": "^5.0.0",
    "jscpd": "^4.0.8",
    "knip": "^5.85.0",
    "license-checker": "^25.0.1",
    "lockfile-lint": "^5.0.0",
    "madge": "^8.0.0",
    "npm-check-updates": "^19.5.0",
    "oxlint": "^1.50.0",
    "rollup-plugin-visualizer": "^7.0.0",
    "tailwindcss": "^4.2.1",
    "ts-prune": "^0.10.3",
    "tsx": "^4.21.0",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.998.0",
    "@pixi/react": "^8.0.5",
    "@tanstack/react-virtual": "^3.13.19",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "cannon-es": "^0.20.0",
    "electron-updater": "^6.8.3",
    "peerjs": "^1.5.5",
    "pixi.js": "^8.16.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.1",
    "three": "^0.183.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  }
}
